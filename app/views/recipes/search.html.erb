<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>Team Awesome Recipe Finder</title>
<meta name="keywords" content="" />
<meta name="description" content="" />
<link href="default.css" rel="stylesheet" type="text/css" />
</head>
<body>

<div id="logo-wrap">
<div id="logo">
	<h1 color="white" >Recipes </h1>
	<h2>   By: Team Awesome</h2>
</div>
</div>

<!-- start header -->
<div id="header">
	<div id="menu">
		<ul>
			<li><%= link_to 'Home', '/users' %></li>
			<li class="current_page_item"><%= link_to "Recipes", '/recipes' %></li>
		</ul>
	</div>
</div>
<!-- end header -->
<!-- start page -->
<div id="wrapper">
<div id="wrapper-btm">
<div id="page">
	<!-- start content -->
	<div id="content">
		<div class="post">
			<h1 class="title">Search Results</h1>
			<div class="entry">
<% @recipes.each do |recipe| %>
<h3><%= recipe.title %></h3>
<table>
  <td><%= recipe.amount1 %></td>
  <td><%= recipe.measure1 %></td>
  <td><%= recipe.ingredient1 %></td>
</tr>
<tr>
  <td><%= recipe.amount2 %></td>
  <td><%= recipe.measure2 %></td>
  <td><%= recipe.ingredient2 %></td>
</tr>
<tr>
  <td><%= recipe.amount3 %></td>
  <td><%= recipe.measure3 %></td>
  <td><%= recipe.ingredient3 %></td>
</tr>
<tr>
  <td><%= recipe.amount4 %></td>
  <td><%= recipe.measure4 %></td>
  <td><%= recipe.ingredient4 %></td>
</tr>
<tr>
  <td><%= recipe.amount5 %></td>
  <td><%= recipe.measure5 %></td>
  <td><%= recipe.ingredient5 %></td>
<tr>
  <td><%= recipe.amount6 %></td>
  <td><%= recipe.measure6 %></td>
  <td><%= recipe.ingredient6 %></td>  
</tr>
<tr>
  <td><%= recipe.amount7 %></td>
  <td><%= recipe.measure7 %></td>
  <td><%= recipe.ingredient7 %></td>
</tr>

<tr>
  <td><%= recipe.amount8 %></td>
  <td><%= recipe.measure8 %></td>
  <td><%= recipe.ingredient8 %></td>
</tr>
<tr>
  <td><%= recipe.amount9 %></td>
  <td><%= recipe.measure9 %></td>
  <td><%= recipe.ingredient9 %></td>
</tr>
<tr>
  <td><%= recipe.amount10 %></td>
  <td><%= recipe.measure10 %></td>
  <td><%= recipe.ingredient10 %></td>
</tr>
</table>

<b>Instructions:</b>
<p><%= recipe.instructions %></p>
<% end %>
			</div>
		</div>
		</div>
	</div>
	<!-- end content -->
	<!-- start sidebar -->
	<div id="sidebar">
		<ul>
			<li id="search">
				<h2>Search</h2>
				<%= form_tag "/search", :method => "get" do %>
					<%label_tag(:search, "Search for: " ) %>
     				<%= text_field_tag(:search)%>
					<%= submit_tag "Search", :name => nil %>
					<% end %>
				</form>
			</li>
		</ul>
	</div>
	<!-- end sidebar -->
	<div style="clear: both;">&nbsp;</div>
</div>
<!-- end page -->
</div>
</div>
<!-- start footer -->
<div id="footer">
	<div id="footer-wrap">
	<p id="legal">Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.</p>
	</div>
</div>
<!-- end footer -->
<div align=center>This site brought to you by Team Awesome</div></body>
</html>



